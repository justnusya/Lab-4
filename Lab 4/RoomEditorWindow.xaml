<Window x:Class="Lab_4.RoomEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4"
        mc:Ignorable="d"
        Title="RoomEditorWindow" Height="500" Width="500">
    <Grid>
        <Rectangle Width="Auto" Height="245" Fill="LightGray" VerticalAlignment="Top" />
        <TextBlock Text="Приміщення" FontSize="20" Margin="10,10,243.286,416.429" TextDecorations="Underline"/>
        <TextBlock Text="Тип" FontSize="15" Margin="25,51,85.286,112.429"/>
        <ComboBox Width="166" Height="17" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,73,0,0" />
        <TextBlock Text="Номер" FontSize="15" Margin="25,98,85.286,161.429"/>
        <TextBox Width="166" Height="18" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,125,0,0"/>
        <TextBlock Text="Розмір, м²" FontSize="15" Margin="25,151,85.286,213.429"/>
        <TextBox Width="166" Height="17" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,172,0,282.429"/>
        <TextBlock Text="Вартість прибирання, грн" FontSize="15" VerticalAlignment="Center" Margin="25,196,48.286,250.429" Height="25"/>
        <TextBox Width="166" Height="17" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,221,0,233.429"/>

        <TextBlock Text="Тварини" FontSize="18" VerticalAlignment="Center" Margin="10,50,0,0" TextDecorations="Underline"/>
        <Rectangle Fill="#FFD7D7D7" HorizontalAlignment="Left" Stroke="Black" Height="170" VerticalAlignment="Bottom" Width="360" Margin="15"/>
        <ListBox x:Name="SpacesBox" HorizontalAlignment="Left" Height="150" VerticalAlignment="Bottom" Width="340" Margin="25,0,0,25"/>
        <Button x:Name="AddAccUnit" Content="Add" Height="20" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,110"/>
        <Button x:Name="EditAccUnit" Content="Edit" Height="20" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,80"/>
        <Button x:Name="DeleteAccUnit" Content="Delete" Height="20" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,50"/>
        <Button x:Name="Save" Content="Save" Height="20" Width="70" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,15,20,0" 
                FontWeight="Bold" BorderBrush="Black" Background="LimeGreen"/>
    </Grid>
</Window>
